#!/bin/bash

# =====================================================
# MCP Servers Shutdown Script for Cursor
# Version: 1.0
# Date: 2025-05-14
# =====================================================

# Color definitions for better readability
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
NC='\033[0m' # No Color

echo -e "${BLUE}üõë Stopping all MCP servers...${NC}"

# Function to stop a specific process
stop_process() {
    local process_pattern="$1"
    local friendly_name="$2"
    
    if pgrep -f "$process_pattern" >/dev/null; then
        echo -e "${YELLOW}‚è≥ Stopping $friendly_name...${NC}"
        pkill -f "$process_pattern"
        sleep 2
        
        if pgrep -f "$process_pattern" >/dev/null; then
            echo -e "${RED}‚ö†Ô∏è $friendly_name is still running, forcing termination...${NC}"
            pkill -9 -f "$process_pattern"
            sleep 1
        fi
        
        if pgrep -f "$process_pattern" >/dev/null; then
            echo -e "${RED}‚ùå Failed to stop $friendly_name${NC}"
            return 1
        else
            echo -e "${GREEN}‚úÖ $friendly_name stopped successfully${NC}"
            return 0
        fi
    else
        echo -e "${BLUE}‚ÑπÔ∏è $friendly_name is not running${NC}"
        return 0
    fi
}

# Stop Memory MCP server
stop_process "memory-mcp-server" "Memory MCP server"
MEMORY_STATUS=$?

# Stop Puppeteer MCP server
stop_process "puppeteer-mcp-server" "Puppeteer MCP server"
PUPPETEER_STATUS=$?

# Stop MySQL MCP server
stop_process "mysql-db-connector.js" "MySQL MCP server"
MYSQL_STATUS=$?

# Summary
echo
echo -e "${MAGENTA}=== MCP Servers Shutdown Summary ===${NC}"
echo -e "Memory MCP: $([ $MEMORY_STATUS -eq 0 ] && echo -e "${GREEN}Stopped‚úÖ${NC}" || echo -e "${RED}Failed‚ùå${NC}")"
echo -e "Puppeteer MCP: $([ $PUPPETEER_STATUS -eq 0 ] && echo -e "${GREEN}Stopped‚úÖ${NC}" || echo -e "${RED}Failed‚ùå${NC}")"
echo -e "MySQL MCP: $([ $MYSQL_STATUS -eq 0 ] && echo -e "${GREEN}Stopped‚úÖ${NC}" || echo -e "${RED}Failed‚ùå${NC}")"
echo

if [ $MEMORY_STATUS -eq 0 ] && [ $PUPPETEER_STATUS -eq 0 ] && [ $MYSQL_STATUS -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All MCP servers have been stopped successfully${NC}"
else
    echo -e "${RED}‚ö†Ô∏è Some MCP servers could not be stopped${NC}"
    echo -e "${YELLOW}‚ÑπÔ∏è You may need to manually terminate remaining processes${NC}"
    echo -e "${YELLOW}   Run: ps aux | grep -E 'MCP|mysql-db-connector' to identify them${NC}"
fi

echo -e "${BLUE}‚ÑπÔ∏è To start MCP servers again, run: ${YELLOW}~/start-mcp-servers${NC}"
