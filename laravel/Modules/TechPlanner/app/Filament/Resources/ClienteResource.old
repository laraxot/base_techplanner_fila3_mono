<?php

namespace Modules\TechPlanner\Filament\Resources;

use Filament\Forms;
use Filament\Forms\Form;
use Filament\Resources\Resource;
use Filament\Tables\Table;
use Filament\Tables;
use Modules\TechPlanner\Models\Cliente;
use Filament\Forms\Components\Card;

class ClienteResource extends Resource
{
    protected static ?string $model = Cliente::class;
    protected static ?string $navigationIcon = 'heroicon-o-user-group';
    protected static ?string $navigationGroup = 'TechPlanner';

    public static function form(Form $form): Form
    {
        return $form
            ->schema([
                Card::make()->schema([
                    Forms\Components\Toggle::make('cessato')
                        ->required(),
                    Forms\Components\TextInput::make('ditta')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('az_ulss_competente')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('cf')
                        ->label('Codice Fiscale')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('partita_iva')
                        ->maxLength(11),
                    Forms\Components\TextInput::make('sede_ditta')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('indirizzo')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('numero_civico')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('provincia')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('cap')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('telefono')
                        ->tel()
                        ->maxLength(50),
                    Forms\Components\TextInput::make('fax')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('cellulare')
                        ->tel()
                        ->maxLength(50),
                    Forms\Components\TextInput::make('email')
                        ->email()
                        ->maxLength(50),
                    Forms\Components\Textarea::make('note'),
                    Forms\Components\TextInput::make('attivita')
                        ->maxLength(50),
                ])->columns(2)
            ]);
    }

    public static function table(Table $table): Table
    {
        return $table
            ->columns([
                Tables\Columns\TextColumn::make('ditta')->sortable()->searchable(),
                Tables\Columns\IconColumn::make('cessato')->boolean(),
                Tables\Columns\TextColumn::make('partita_iva')->searchable(),
                Tables\Columns\TextColumn::make('provincia')->sortable(),
                Tables\Columns\TextColumn::make('telefono'),
                Tables\Columns\TextColumn::make('email'),
            ])
            ->filters([
                Tables\Filters\Filter::make('attivi')
                    ->query(fn ($query) => $query->where('cessato', false)),
            ])
            ->actions([
                Tables\Actions\EditAction::make(),
                Tables\Actions\DeleteAction::make(),
            ])
            ->bulkActions([
                Tables\Actions\DeleteBulkAction::make(),
            ]);
    }

    public static function getRelations(): array
    {
        return [
            RelationManagers\ApparecchiRelationManager::class,
        ];
    }

    public static function getPages(): array
    {
        return [
            'index' => Pages\ListClienti::route('/'),
            'create' => Pages\CreateCliente::route('/create'),
            'edit' => Pages\EditCliente::route('/{record}/edit'),
        ];
    }
}
