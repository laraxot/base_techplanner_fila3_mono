namespace Modules\TechPlanner\Filament\Resources\ClientResource\RelationManagers;

use Filament\Resources\RelationManagers\RelationManager;
use Filament\Tables;

class MachinesRelationManager extends RelationManager
{
    protected static string $relationship = 'machines';
    protected static string $resource = MachineResource::class;

    public function getTableColumns(): array
    {
        return [
            Tables\Columns\TextColumn::make('name')->sortable(),
            Tables\Columns\TextColumn::make('status')->sortable(),
            Tables\Columns\TextColumn::make('notes')->limit(50),
        ];
    }
}
