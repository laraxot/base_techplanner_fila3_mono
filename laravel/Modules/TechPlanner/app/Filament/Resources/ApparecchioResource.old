<?php

namespace Modules\TechPlanner\Filament\Resources;

use Filament\Forms;
use Filament\Tables;
use Filament\Forms\Form;
use Filament\Tables\Table;
use Filament\Resources\Resource;
use Modules\TechPlanner\Models\Apparecchio;
use Filament\Forms\Components\Card;

class ApparecchioResource extends Resource
{
    protected static ?string $model = Apparecchio::class;
    protected static ?string $navigationIcon = 'heroicon-o-device-tablet';
    protected static ?string $navigationGroup = 'TechPlanner';

    public static function form(Form $form): Form
    {
        return $form
            ->schema([
                Card::make()->schema([
                    Forms\Components\Select::make('id_cliente')
                        ->relationship('cliente', 'ditta')
                        ->required(),
                    Forms\Components\TextInput::make('tipo_apparecchio')
                        ->required()
                        ->maxLength(255),
                    Forms\Components\TextInput::make('marca')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('modello')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('matricola_cuffia')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('matricola_tubo')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('p_kv')
                        ->maxLength(50),
                    Forms\Components\TextInput::make('i_ma')
                        ->maxLength(50),
                    Forms\Components\DateTimePicker::make('data_prima_verifica'),
                    Forms\Components\Textarea::make('commenti'),
                ])->columns(2)
            ]);
    }

    public static function table(Table $table): Table
    {
        return $table
            ->columns([
                Tables\Columns\TextColumn::make('cliente.ditta')->sortable()->searchable(),
                Tables\Columns\TextColumn::make('tipo_apparecchio')->sortable(),
                Tables\Columns\TextColumn::make('marca'),
                Tables\Columns\TextColumn::make('modello'),
                Tables\Columns\TextColumn::make('data_prima_verifica')->dateTime(),
            ])
            ->filters([
                //
            ])
            ->actions([
                Tables\Actions\EditAction::make(),
                Tables\Actions\DeleteAction::make(),
            ])
            ->bulkActions([
                Tables\Actions\DeleteBulkAction::make(),
            ]);
    }

    public static function getRelations(): array
    {
        return [
            RelationManagers\VerificheRelationManager::class,
        ];
    }

    public static function getPages(): array
    {
        return [
            'index' => Pages\ListApparecchi::route('/'),
            'create' => Pages\CreateApparecchio::route('/create'),
            'edit' => Pages\EditApparecchio::route('/{record}/edit'),
        ];
    }
}
