{
    "name": "spatiex/laravel-comments-livewire",
    "description": "Livewire components for laravel-comments",
    "keywords": [
        "spatie",
        "laravel",
        "livewire",
        "laravel-comments"
    ],
    "homepage": "https://github.com/spatie/laravel-comments",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.spatie.be"
        }
    ],
    "require": {
        "spatiex/laravel-comments": "*",
        "spatie/laravel-markdown": "*",
        "spatie/laravel-package-tools": "*"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\LivewireComments\\": "src",
            "Spatie\\LivewireComments\\Database\\Factories\\": "database/factories"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\LivewireComments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\LivewireComments\\LivewireCommentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
