{
    "User": {
        "type": "base",
        "traits": [
            "HasFactory",
            "Notifiable",
            "HasParent"
        ],
        "relationships": [
            "doctor",
            "patient"
        ],
        "table": "users",
        "type_column": "type"
    },
    "Doctor": {
        "extends": "User",
        "type": "child",
        "traits": [
            "HasParent"
        ],
        "context": "medical",
        "validations": [
            "medical_license",
            "specialization"
        ]
    },
    "Patient": {
        "extends": "User",
        "type": "child",
        "traits": [
            "HasParent"
        ],
        "context": "medical",
        "validations": [
            "health_insurance",
            "medical_history"
        ]
    },
    "Appointment": {
        "type": "model",
        "traits": [
            "HasFactory"
        ],
        "relationships": [
            "doctor",
            "patient"
        ],
        "context": "medical",
        "validations": [
            "checkAvailability",
            "validateSchedule"
        ]
    },
    "Prescription": {
        "type": "model",
        "traits": [
            "HasFactory"
        ],
        "relationships": [
            "doctor",
            "patient"
        ],
        "context": "medical",
        "validations": [
            "validateMedication",
            "checkDosage"
        ]
    }
}
