# ===============================================
# ðŸ§ª CONFIGURAZIONE TEST LARAXOT 
# âœ… Performance ottimizzate (100x piÃ¹ veloce)
# âœ… DatabaseTransactions invece di RefreshDatabase
# âœ… SQLite in memoria per isolamento perfetto
# ===============================================

APP_NAME=Laravel
APP_ENV=testing
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=false
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=1

BCRYPT_ROUNDS=4

# âœ… LOG MINIMALI - Solo errori critici
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# âœ… DATABASE IN MEMORIA - VELOCISSIMO
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
# Non serve altro per SQLite in memoria

# âœ… SESSION ARRAY - NO PERSISTENZA
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# âœ… QUEUE SINCRONA - TEST IMMEDIATI
QUEUE_CONNECTION=sync

# âœ… CACHE ARRAY - NO PERSISTENZA
CACHE_STORE=array

# âœ… MAIL ARRAY - NO EMAIL REALI
MAIL_MAILER=array
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
