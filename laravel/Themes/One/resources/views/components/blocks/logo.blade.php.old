])

{{-- 
    Il blocco riceve direttamente le props dal JSON
    Per i percorsi delle immagini:
    - src deve essere relativo al modulo (es: /Modules/Patient/resources/images/logo.svg)
    - $_theme->asset() converte il percorso in URL pubblico
--}}

@php
    $wrapper = $url ? 'a' : 'div';
    
@endphp

<x-filament::icon
    icon="patient-logo"
    class="h-7 w-7 text-gray-500 dark:text-gray-400"
/>

<{{ $wrapper }} {{ $wrapper === 'a' ? 'href='.$url : '' }} class="flex items-center space-x-3">
    @if($icon)
        <x-filament::icon
            :name="$icon"
            :class="$size"
            class="text-primary-600 dark:text-primary-400"
        />
    @elseif($src)
        {{--  
        <x-filament::icon
         icon="patient-logo"
         class="h-5 w-5 text-gray-500 dark:text-gray-400"
        />
        --}}
        <img src="{{ $_theme->asset($src) }}"
             alt="{{ $alt }}"
             @if($width) width="{{ $width }}" @endif
             @if($height) height="{{ $height }}" @endif
             class="{{ $size }}" />
    @endif
      
    <div class="flex flex-col">
        @if($title)
            <span class="text-lg font-semibold text-gray-900 dark:text-gray-100">
                {{ $title }}
            </span>
        @endif
        
        @if($description)
            <span class="text-sm text-gray-600 dark:text-gray-400">
                {{ $description }}
            </span>
        @endif
    </div>
</{{ $wrapper }}>