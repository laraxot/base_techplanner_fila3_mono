{
    "name": "sixteen",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "Sixteen Theme - Bootstrap Italia compliant theme for Italian PA websites",
    "keywords": ["bootstrap-italia", "laravel", "theme", "italian-pa", "accessibility"],
    "scripts": {
        "dev": "vite",
        "build": "vite build --config vite.config.optimized.js",
        "build:production": "NODE_ENV=production vite build --config vite.config.optimized.js --mode production",
        "build:analyze": "vite build --config vite.config.optimized.js --mode analyze",
        "preview": "vite preview",
        "copy": "cp -r ./public/* ../../../public_html/themes/Sixteen/",
        "copy:watch": "nodemon --watch ./public --exec 'npm run copy'",
        "postbuild": "npm run copy",
        "lint": "eslint resources/js/**/*.js --fix",
        "lint:css": "stylelint resources/css/**/*.css --fix",
        "format": "prettier --write resources/**/*.{js,css,blade.php}",
        "format:check": "prettier --check resources/**/*.{js,css,blade.php}",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "analyze": "vite build --config vite.config.optimized.js --mode analyze",
        "analyze:serve": "npx serve dist",
        "bundle-report": "npm run analyze && open dist/stats.html",
        "clean": "rm -rf public/assets && rm -rf node_modules/.vite",
        "prepare": "npm run clean && npm install",
        "validate": "npm run lint && npm run format:check && npm run test",
        "optimize:images": "imagemin resources/images/**/* --out-dir=public/images --plugin=imagemin-webp --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
        "preflight": "npm run validate && npm run build:production"
    },
    "dependencies": {
        "bootstrap-italia": "^2.8.8",
        "@popperjs/core": "^2.11.8",
        "alpinejs": "^3.14.1",
        "@alpinejs/intersect": "^3.14.1",
        "@alpinejs/persist": "^3.14.1",
        "@alpinejs/focus": "^3.14.1",
        "chart.js": "^4.4.0"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "autoprefixer": "^10.4.21",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "daisyui": "^4.12.22",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "flowbite": "^2.5.1",
        "glob": "^10.3.10",
        "imagemin": "^8.0.1",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-pngquant": "^9.0.2",
        "imagemin-webp": "^8.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "laravel-vite-plugin": "^1.3.0",
        "nodemon": "^3.0.3",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-nesting": "^13.0.2",
        "prettier": "^3.6.2",
        "rollup-plugin-visualizer": "^5.12.0",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^36.0.0",
        "swiper": "^11.1.10",
        "tailwindcss": "^3.4.17",
        "terser": "^5.28.1",
        "vanilla-cookieconsent": "^3.0.1",
        "vite": "^6.3.5",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-pwa": "^0.19.2"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
